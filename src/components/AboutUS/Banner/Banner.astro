  .small_card {
    font-size: 28.73px;
    line-height: 30.79px;
  }
  .small_card_lower_text {
    font-size: 14.31px;
    line-height: 16.83px;
  }
  .image_lower_div {
    font-size: 60.25px;
    line-height: 30.76px;
  }
  .image_lower_text {
    font-size: 16.31px;
    line-height: 24.46px;
  }
}

@media (max-width: 875px) {

---
import { Image } from 'astro:assets';
interface Menu {
  link: string;
  text: string;
  is_dropdown? : boolean;
  icon? : string;
  cName? : string;
  submenu?: Menu[];
}
interface Props {
  items: Menu[]
}
const { items } = Astro.props;
---
<div class="option_cotainer">
{
  items.map((item) => item.is_dropdown ? <a href={item.link} class="option">{item.text}</a> :
  <button class="option">{item.text}
    <Image src={"/plus.svg"} alt="arrow down" class="icon" width={12} height={12} /></button>)
}
</div>
<style>
  .option_container {
  position: fixed;
  height: 100vh;
  width: 55%;
  background: #ffffff;
  top: 5rem;
  right: 0;
  /* border: 1px solid green; */
  z-index: 10;
  display: flex;
  flex-direction: column;
  padding: 10px 0;
  /* transition: all 0.4s ease-in-out;  */
}

.option {
  font-family: var(--font-dm-Sans);
  font-size: 16px;
  font-weight: 600;
  color: black;
  border: none;
  line-height: 20.83px;
  border-bottom: 1px solid #0697db;
  padding: 20px 30px;
  background: none;
  text-align: left;
  display: flex;
  align-items: center;
}

.open {
  background: #e5e5e5;
}

.otherfont {
  font-weight: 400;
  font-size: 15px;
  padding: 10px 30px 10px 45px;
}

.icon {
  margin-left: 10px;
}
</style>
---
import Wrapper from '../../Common/Wrapper.astro';
import { Cardsanim, Staggeranim } from '../../Common/Transition/Cardsanim.jsx';
import { Image } from 'astro:assets';

interface Props {
  carselection: [{
    img: string;
    car: string;
  }]
}
const { carselection } = Astro.props;
---
<Wrapper>
  <div style={"margin-bottom: '8rem' "}>
    {/* Upper Section */}
    <div class={"upper"}>
      <h2 class={"upperleft"}>
        Unsere <br /> Fahrzeuge
      </h2>

      <p class={"upperright"}>
        Unsere modernen Fahrzeuge bieten höchsten Komfort und Sicherheit für
        eine optimale Fahrausbildung. Mit den neuesten Modellen garantieren
        wir eine entspannte und professionelle Lernumgebung.
      </p>
    </div>

    <Cardsanim klass={"lower"} client:visible>
      {carselection.map((el, i) => (
        <Staggeranim key={i} klass={"lowerimg"} client:visible>
          <Image
            src={el.img}
            alt={el.car}
            height={200}
            width={400}
            class={"image"}
          />
          <span class={"car"}>{el.car}</span>
        </Staggeranim>
      ))}
    </Cardsanim>
  </div>
</Wrapper>
<style>
  .upper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40px;
  margin-top: 5rem;
}

.upperleft {
  font-size: 33px;
  font-weight: 600;
  line-height: 1.2;
  font-family: var(--font-clash-display);
}

.upperright {
  font-size: 18px;
  line-height: 1.5;
  font-family: var(--font-dm-Sans);
  font-weight: 400;
  text-align: right;
  width: 700px;
}
</style>
<style is:global>
.lower {
  display: flex;
  justify-content: center;
  gap: 20px;
}

.lowerimg {
  width: 400px;
  height: auto;
  padding: 20px 20px 0 20px;
  border-radius: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
</style>
<style>
.car {
  font-family: var(--font-clash-display);
  font-weight: 600;
  font-size: 18px;
}

.image {
  border-radius: 15px;
  object-fit: contain;
}

@media screen and (max-width: 844px) {
  .upper {
    flex-direction: column;
    text-align: center;
    padding: 10px;
  }

  .upperleft {
    font-size: 2rem;
  }

  .upperright {
    margin-top: 20px;
    text-align: center;
    max-width: 100%;
  }

  .lower {
    flex-direction: column;
    align-items: center;
  }

  .lowerimg {
    width: 100%;
    margin-bottom: 20px;
  }
  .image {
    width: 100%;
    height: auto;
  }
}

</style>
---
import { Image } from 'astro:assets';
import KurseDialogButton from '../../Common/KurseDialogButton/index.jsx';


interface Props {
  Titel: string;
  Kurzbeschreibung: string;
  Kursfoto: string;
  Fotoalttag: string;
};

const { Titel, Kurzbeschreibung, Kursfoto,
  Fotoalttag } = Astro.props;
  
---
<div class={"left_scroll_area"}>
  <div class={"left"}>
    <div class={"leftContent"}>
      <h1 class={"title"}>{Titel}</h1>
      <p class={"description"}>{Kurzbeschreibung}</p>
      {/* <Link href={"/kontakt"} class={registerButton}>
        Anmelden
      </Link> */}
      {Titel === "Verkehrskunde" &&  (
        <KurseDialogButton />
      )}
    </div>
    <div class={"leftImage"}>
      <Image
        src={Kursfoto}
        alt={Fotoalttag}
        class={"image"}
        width={300}
        height={300}
      />
    </div>
  </div>
</div>
<style>
.main {
	 display: grid;
	 grid-template-columns: 60% 40%;
	 grid-template-rows: repeat(3, auto);
	 justify-items: end;
	 margin-top: 1rem;
	 column-gap: 20px;
	/* height: 90vh;
	 */
}
 .main ::backdrop {
	 background-color: black;
	 opacity: 0.7;
}
 .left_scroll_area {
	 display: flex;
   flex-direction: column;
	 grid-template-columns: subgrid;
	 grid-template-rows: subgrid;
	 grid-row: 0.25;
	 grid-column: 0.3333333333;
	 width: auto;
	/* height: 100%;
	 */
	/* overflow-y: scroll;
	 */
	 padding: 0 2px;
	 overflow-x: hidden;
	 -webkit-overflow-scrolling: touch;
}
/* .left_scroll_area::-webkit-scrollbar {
	 display: none;
}
 .left_scroll_area {
	 scrollbar-width: none;
}
 .left_scroll_area {
	 -ms-overflow-style: none;
}
 */
 .left_scroll_area::-webkit-scrollbar {
	 width: 5px;
	 border-radius: 7px;
}
 .left_scroll_area::-webkit-scrollbar-thumb {
	 background-color: #ababab;
	 border-radius: 10px;
}
 .left_scroll_area::-webkit-scrollbar-track {
	 background-color: white;
}
 .left_scroll_area {
	 scrollbar-width: thin;
	 scrollbar-color: #ababab white;
}
 .left {
	 grid-row: 0.5;
	 position: relative;
}
 .leftContent {
	 position: absolute;
	 top: 29px;
	 left: 41px;
	 color: white;
	 z-index: 2;
	 width: 27rem;
}
 .left_scroll_area .timetable {
	 grid-row: 0.6666666667;
	 grid-column: 0.3333333333;
	 overflow-x: auto;
}
 .left_scroll_area .timetable > iframe {
	 width: 100%;
	 height: 420px;
}
 .left_scroll_area .timetable .customTable {
	 width: 100%;
	 font-family: var(--font-dm-Sans);
}
 .left_scroll_area .timetable .customTable > thead tr {
	 display: flex;
	 justify-content: space-between;
	 column-gap: 20px;
	 margin-top: 20px;
	 border-bottom: 1px solid #ddd;
}
 .left_scroll_area .timetable .customTable > thead tr > th {
	 flex: 1;
	 text-align: center;
	 padding: 10px 0;
	 color: #777;
	 cursor: pointer;
}
 .left_scroll_area .timetable .customTable > thead tr > .activeMonth {
	 color: #236baf;
	 border: 1px solid #ddd;
}
 .left_scroll_area .timetable .customTable > tbody {
	 display: block;
}
 .left_scroll_area .timetable .customTable > tbody > tr {
	 display: flex;
	 justify-content: space-between;
	 align-items: baseline;
	 padding: 5px 0;
	 padding: 20px;
	 margin-bottom: 10px;
	 background-color: #f9f9f9;
	 border-top: 1px solid #e0e0e0;
}
 .left_scroll_area .timetable .customTable > tbody > tr > * {
	 color: #4d4d4d;
	 font-weight: 100;
	 font-size: 14px;
}
 .left_scroll_area .timetable .customTable > tbody > tr > *:hover {
	 color: #737373;
}
 .left_scroll_area .timetable .customTable > tbody > tr > td > p {
	 margin-bottom: 15px;
}
 .left_scroll_area .timetable .customTable > tbody > tr > td > span {
	 margin-left: 10px;
}
 .left_scroll_area .timetable .customTable > tbody > tr > td > a {
	 text-decoration: underline;
	 text-align: left;
	 font-size: 14px;
}
 .left_scroll_area .timetable .customTable > tbody > tr > td:last-child {
	 text-align: center;
}
 .title {
	 font-size: 40px;
	 font-weight: 600;
	 font-family: var(--font-clash-display);
	 margin-bottom: 20px;
}
 .description {
	 font-size: 18px;
	 font-weight: 400;
	 font-family: var(--font-dm-Sans);
	 margin-bottom: 20px;
}
 .registerButton {
	 padding: 10px 20px;
	 background-color: #0697db;
	 border: none;
	 color: white;
	 font-size: 14px;
	 font-family: var(--font-dm-Sans);
	 font-weight: 800;
	 cursor: pointer;
	 border-radius: 10px;
}
 .registerButton:hover {
	 background-color: #236baf;
}
 .leftImage {
	 position: relative;
	 z-index: 1;
	 height: 400px;
	 width: 100%;
}
 .leftImage img {
	 height: 100%;
}
 .leftImage:after {
	 content: "";
	 position: absolute;
	 top: 0;
	 left: 0;
	 width: 100%;
	 height: 100%;
	 background: linear-gradient(to left, transparent 0%, black 100%);
}
 .image {
	 border-radius: 10px;
	 width: 100%;
	 object-fit: cover;
}
 .right {
	 width: auto;
	 grid-row: 0.5;
	 grid-column: 0.6666666667;
}
 .right dialog {
	 position: fixed;
	 top: 50vh;
	 left: 50vw;
	 transform: translate(-50%, -50%);
	 width: 75vw;
	 height: 75vh;
	 border: 0;
}
 .right dialog .closeBtn {
	 position: absolute;
	 top: 10px;
	 left: 10px;
	 z-index: 10;
	 font-size: 30px;
	 cursor: pointer;
	 background-color: white;
	 border: 0;
}
 .header {
	 font-size: 24px;
	 font-weight: bold;
	 margin-bottom: 20px;
}
 .datetitle {
	 font-size: 20px;
	 padding-top: 20px;
	 font-weight: 500;
	 font-family: var(--font-clash-display);
}
 .datep {
	 font-size: 15px;
	 padding: 10px 0;
	 color: #585858;
}
 .dates {
	 width: 100%;
	 display: flex;
	 flex-direction: column;
	 align-items: center;
	 gap: 5px;
}
 .onedatewrap {
	 border: none;
	 background: none;
	 padding: 10px;
	 border: 1px solid gray;
	 width: 70%;
	 text-align: center;
	 display: flex;
	 justify-content: center;
	 align-items: center;
	 gap: 20px;
}
 .onedatewrap > span:last-of-type {
	 font-size: 13px;
	 color: #236baf;
	 position: relative;
	 display: inline-block;
}
 .onedatewrap > span:last-of-type:after {
	 content: "PlÃ¤tze gebucht";
	 position: absolute;
	 bottom: 130%;
	 left: 50%;
	 transform: translateX(-50%);
	 background-color: #333;
	 color: #fff;
	 padding: 8px;
	 border-radius: 4px;
	 white-space: nowrap;
	 font-size: 12px;
	 opacity: 0;
	 pointer-events: none;
	 transition: opacity 0.3s ease;
}
 .onedatewrap > span:last-of-type:before {
	 content: "";
	 position: absolute;
	 bottom: 100%;
	 left: 50%;
	 transform: translateX(-50%);
	 border-width: 6px;
	 border-style: solid;
	 border-color: transparent transparent #333 transparent;
	/* Triangle pointing down */
	 opacity: 0;
	 transition: opacity 0.3s ease;
}
 .onedatewrap > span:last-of-type:hover:before, .onedatewrap > span:last-of-type:hover:after {
	 opacity: 1;
}
 .standortwrap {
	 display: flex;
	 gap: 20px;
	 padding: 10px 0;
}
 .booktermin {
	 margin-top: 10px;
	 border: none;
	 border-radius: 15px;
	 background-color: #0697db;
	 color: white;
	 padding: 10px 20px;
	 cursor: pointer;
}
 .sethide {
	 display: none;
}
 .openmore {
	 border: none;
	 background: none;
	 cursor: pointer;
	 font-size: 18px;
	 position: relative;
}
 .openmore:after {
	 position: absolute;
	 bottom: 0;
	 left: 0;
	 height: 100%;
	 width: 100%;
	 content: "";
	 background: linear-gradient(to top, rgba(255, 255, 255, 1) 2%, rgba(255, 255, 255, 0) 98%);
}
 .course {
	 display: flex;
	 align-items: center;
	 margin-bottom: 10px;
	 text-decoration: none;
	 color: black;
	 background: none;
	 border: none;
	 text-align: left;
	 width: fit-content;
}
 .course:hover {
	 transform: scale(1.02);
	 cursor: pointer;
}
 .onfocus {
	 background: linear-gradient(to top, white 30%, #fff3dc 130%);
	 border-radius: 15px;
}
 .courseImage {
	 margin-right: 20px;
	 border-radius: 10px;
}
 .courseText h3 {
	 font-size: 18px;
	 margin-bottom: 5px;
}
 .courseText p {
	 font-size: 14px;
}
/* Responsive Design */
 @media (max-width: 768px) {
	 .main {
		 display: block;
	}
	 .left_scroll_area #timetable {
		 height: fit-content;
	}
	 .left {
		 width: 100%;
	}
	 .right_section {
		 width: 100%;
		 display: flex;
		 flex-direction: column;
	}
	 .header {
		 font-size: 2rem;
	}
	 .description {
		 margin-bottom: 30px;
	}
	 .courseText h3 {
		 font-size: 1.5rem;
	}
	 .courseText p {
		 font-size: 1rem;
	}
}
 @media (max-width: 576px) {
	 .main {
		 flex-direction: column;
		 gap: 1rem;
		 margin-top: 1rem;
	}
	 .title {
		 font-size: 30px;
	}
	 .leftImage {
		 height: 350px;
	}
	 .description {
		 font-size: 15px;
	}
	 .registerButton {
		 font-size: 1rem;
		 padding: 0.5rem 1rem;
		 margin-top: 20px;
	}
	 .courseText h3 {
		 font-size: 1.5rem;
	}
	 .courseText p {
		 font-size: 1rem;
	}
	 .courseImage {
		 width: 60px;
		 height: 60px;
	}
	 .left {
		 grid-column: 0.3333333333;
	}
	 .leftContent {
		 top: 20px;
		 left: 10px;
		 width: 18rem;
	}
}
 @media (max-width: 1024px) {
	 .right dialog {
		 width: 100vw;
	}
}
 @media (max-width: 1216px) {
	 .main {
		 flex-direction: column;
	}
	 .left_scroll_area {
		 order: 1;
		 width: 100%;
		/* height: 150vh;
		 */
		/* overflow: auto;
		 */
	}
	 .right {
		 order: 2;
		 width: 100%;
		/* margin-top: 2rem;
		 */
		 position: static;
		 padding: 6px;
	}
	 .title {
		 margin-bottom: 10px;
	}
	 .description {
		 margin-bottom: 20px;
	}
}

</style>
---
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<div class={"preise_section"}>
  <h1>
    {title.split("\\n").map(line => <>
      {line}<br />
    </>)}
  </h1>
</div>
<style>
.preise_section {
  padding: 5rem 0;
  font-family: var(--font-clash-display);
  font-size: 40px;
  font-weight: 600;
  line-height: 45.76px;
  letter-spacing: 0.01em;
  text-align: center;
}
h1 {
  font-size: 40px;
  display: block;
  margin-block-start: 0.67em;
  margin-block-end: 0.67em;
  margin-inline-start: 0px;
  margin-inline-end: 0px;
  font-weight: bold;
  unicode-bidi: isolate;
}
@media (max-width: 982px) {
  .preise_section {
    padding: 2rem 0;
    font-size: 30px;
    line-height: 36.76px;
  }
}
@media (max-width: 630px) {
  .preise_section {
    padding: 1rem 0;
    font-size: 25px;
  }
}
@media (max-width: 475px) {
  .preise_section {
    font-size: 22px;
  }
}
</style>
---
import { Staggeranim } from '../Transition/Cardsanim.jsx';
import { Image } from 'astro:assets';
interface Props {
  image: {
    image_path: string;
    alt_text: string;
  },
  heading: string;
  body_text: string;
  button_text: string;
  button_link: string;
}
export { Props as MoreOffersCardProps };

const { image, heading, body_text, button_text, button_link} = Astro.props;
---
<Staggeranim klass={"Moreoffercard"} client:visible staggerspeed={0.4}>
  <div class={"image_container"}>
    <Image
      src={image.image_path}
      alt={image.alt_text.split(".")[0]}
      class={"card_images"}
      width={100}
      height={100}
    />
  </div>
  <div class={"info_conatiner"}>
    <h3 class={"header"}>{heading}</h3>
    <p class={"body_text"}>{body_text}</p>
    <a href={button_text} class={"card_btn"}>
      {button_text}
    </a>
  </div>
</Staggeranim>
<style is:global>
.Moreoffercard {
  width: 24%;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
  background-color: #fff;
}
</style>
<style>
.image_container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
}

.card_images {
  width: 112px;
  object-fit: contain;
}

.info_conatiner {
  padding: 20px 15px;
}

.header {
  font-family: var(--font-clash-display);
  font-size: 25px;
  font-weight: 600;
  line-height: 25px;
}

.body_text {
  font-family: var(--font-dm-Sans);
  font-size: 14px;
  font-weight: 400;
  line-height: 21px;
  margin-top: 10px;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card_btn {
  background-color: #0697db;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8px;
  border-radius: 6px;
  margin-top: 20px;
  color: #fff;
  font-family: var(--font-dm-Sans);
  font-size: 16px;
  font-weight: 700;
  line-height: 20.83px;
  cursor: pointer;
}
.card_btn:hover {
  background-color: #2866a0;
}

@media (max-width: 1260px) {
  .Moreoffercard {
    width: 32%;
  }
}

@media (max-width: 860px) {
  .body_text {
    margin-top: 8px;
  }
  .card_btn {
    margin-top: 14px;
    font-size: 14px;
    line-height: 14.83px;
  }
  .info_conatiner {
    padding: 10px 7px;
  }
  .image_container {
    padding: 30px 0;
  }
}

@media (max-width: 650px) {
  .Moreoffercard {
    width: 48%;
  }
}

@media (max-width: 640px) {
  .Moreoffercard {
    width: 100%;
  }
  .body_text {
    font-size: 16px;
    line-height: 28px;
  }
  .card_btn {
    font-size: 18px;
    line-height: 22.83px;
  }
  .body_text {
    font-family: var(--font-dm-Sans);
    font-size: 14px;
    font-weight: 400;
    line-height: 21px;
    margin-top: 10px;
    display: block;
  }
}

</style>
---
import { Staggeranimstyletwo } from '../Transition/Cardsanim.jsx';
import { Image } from 'astro:assets';
interface Props {
  image: {
    image_path: string;
    alt_text: string;
  };
  heading: string;
  body_text: string;
}

export { Props as TailoredCardProps };
const { image, heading, body_text } = Astro.props;
---
<Staggeranimstyletwo klass={"tailored_card"} staggerspeed={0.4} client:visible>
  <div class={"tailored_icon"}>
    <Image
      src={image.image_path}
      alt={image.alt_text.split(".")[0]}
      height={80}
      width={80}
      class={"tailored_card_image"}
    />
  </div>
  <div class={"tailored_lower_area"}>
    <h4>{heading}</h4>
    <p class={"lower_text"}>{body_text}</p>
  </div>
</Staggeranimstyletwo>
<style is:global>
.tailored_card {
  padding: 30px 20px;
  height: 45%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  border-radius: 17px;
  border: 1px solid #e7e9ec;
  background: #fff;
  box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.04),
    0px 4px 8px 0px rgba(0, 0, 0, 0.06);
}
</style>
<style>
.tailored_icon {
  padding: 2px;
  width: 100%;
  display: flex;
  justify-content: center;
}

.tailored_card_image {
  width: 72px;
  object-fit: contain;
}

.tailored_lower_area {
  font-family: var(--font-clash-display);
  font-size: 22px;
  font-weight: 600;
  line-height: 30px;
  text-align: start;
}

.lower_text {
  font-family: var(--font-dm-Sans);
  font-size: 17px;
  font-weight: 300;
  line-height: 23px;
  padding-top: 10px;
}

@media (max-width: 1300px) {
  /* .tailored_lower_area {
    font-size: 20px;
    line-height: 25px;
  } */
}

@media (max-width: 789px) {
  .tailored_lower_area {
    font-size: 17px;
    line-height: 19px;
  }

  .lower_text {
    font-size: 11px;
    line-height: 17px;
  }

  .tailored_card_image {
    width: 50px;
  }

  .tailored_card {
    padding: 10px 8px;
  }
}

@media (max-width: 628px) {
  /* .tailored_lower_area {
    font-size: 14px;
    line-height: 14px;
  } */
}

@media (max-width: 600px) {
  /* .tailored_lower_area {
    font-size: 20px;
    line-height: 25px;
  } */

  .lower_text {
    font-size: 17px;
    line-height: 23px;
  }

  .tailored_card {
    height: 50%;
  }

  .tailored_icon {
    width: 100%;
    height: 45%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .tailored_card_image {
    width: 70px;
  }
}

@media (max-width: 400px) {
  .tailored_card_image {
    width: 50px;
  }
}

</style>